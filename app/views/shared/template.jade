doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, height=device-height, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/sidr.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href='#')= title
      section.top-bar-section
        ul.left
          li.divider
          li: a(href='/') Home
          li.divider
          li.has-dropdown.not-click
            a(href='#') About
            ul.dropdown#about
              li.controls
                p Use the arrow keys to move the tiles on the board.
                p Tiles of the same value slide together and combine.
                p Try to get to the highest tile, 4096!
              li.thanks
                p 4096 is a clone of: <a href='http://gabrielecirulli.github.io/2048/'>2048 by Gabriele Cirulli.</a>
                p This game was created by: <a href='https://github.com/PederSchacht'>Peder Schacht</a> as a project for <a href='http://nashvillesoftwareschool.com/'>NSS Cohort 4</a>.
        ul.right
          if !user
            li: a(href='/register') Register
            li.divider
            li: a(href='/login') Login
          if user
            li: a.chat-window(href='#sidr') Chat Room
            li.divider
            li: a(href='#')= user ? user.name : 'anon'
            li.divider
            li.has-dropdown.not-click
              a#gearicon(href='#') &#9881;
              ul.dropdown
                li.has-form
                  form(action='/logout', method='post')
                    button.alert.tiny.radius.expand#logout Logout

      .row
        .small-12.columns
        block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/vendor/jquery.sidr.js')
    script(src='/js/source/main.js')
    block scripts

    //- This element is below the scripts in order to prevent awkward page loading
    #sidr
      a.chat-window#close-window(href='#sidr') &#4030;
      .row
        .small-12.columns
          #chat-title=title + ' Chat Room'
      #chat-upper
        .row
          .small-12.columns
            #messages
      #chat-lower
        .row
          .small-12.columns
            .space &nbsp;
        .row
          .small-9.columns
            textarea#message-area(rows='1', placeholder='Type your message here.....')
          .small-3.columns
            button.small.radius.expand#send-message Send

    script(src='/js/source/viewport.js')

